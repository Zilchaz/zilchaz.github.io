            <option value="Louis d'or">Louis d'or</option>
        </optgroup>
    </select>
    <br>
    <button onclick="convertCurrency()" title="Convert"><i class="fas fa-coins"></i> Convert</button>
    <button class="swap-button" onclick="swapCurrencies()" title="Swap"><i class="fas fa-exchange-alt"></i></button>
    
    <label for="result"></label>
    <input type="number" id="result" readonly placeholder="Result">
    <label for="toCurrency"></label>
    <select id="toCurrency">
        <optgroup label="Loen Kingdom">
            <option value="Pound">Pound</option>
            <option value="Soli">Soli</option>
            <option value="Penny">Penny</option>
        </optgroup>
